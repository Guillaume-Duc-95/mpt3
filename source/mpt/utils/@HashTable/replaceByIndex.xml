<?xml version="1.0" encoding="utf-8" ?>

<help>
	<function>replaceByIndex</function>
	
	<!-- one-line description of the function -->
	<info>
		Replace the value of an element with a new value based on indexing.
	</info>
	
	<syntax>t = replaceByIndex(h,index,value)</syntax>
	<syntax>t = h.replaceByIndex(index,value)</syntax>

	<!-- long description of the function -->
	<descr>
        Replace the data for the element stored under given <tt>index</tt> with new <tt>value</tt>.
        If the index is greater as the total number of elements, an error is thrown.
	</descr>
	<!-- now describe input arguments -->
	
	<!-- mark inputs as mandatory by providing the "required" attribute -->
	<input required="true">
		<name>h</name>
        <descr>HashTable object.</descr>
		<!-- any class name can be used, it can even be omitted -->
		<class name="HashTable"/>
	</input>

    <input required="true">
		<name>index</name>
        <descr>Index of the element to replace.</descr>
		<!-- any class name can be used, it can even be omitted -->
		<class name="double"/>
	</input>

    <input required="true">
		<name>value</name>
        <descr>Data associated to given element represented in a struct format.</descr>
		<!-- any class name can be used, it can even be omitted -->
		<class name="struct"/>
	</input>

	<!-- now describe output arguments -->
	<output>
		<name>t</name>
        <descr>Logical scalar that informs whether the element was replaced (false) or not (true).</descr>
		<class name="logical"/>
	</output>

	<!-- we can provide multiple code examples -->
    <example>
            <!-- each example is a combination of descriptions and commands -->
        <descr>Construct empty table</descr>		
        <cmd>h = HashTable</cmd>
        <descr>Put an element inside the table.</descr> 
        <cmd> h.put('key',struct('data',123));  </cmd>		
        <descr> Actually, we wanted to assign different data. To replace the value use</descr>
        <cmd> h.replaceByIndex(1,struct('newdata',321)) </cmd>
	</example>

	<!-- multiple related function can be defined -->
    <related>replaceByKey</related>
    <related>removeByKey</related>
    <related>removeByIndex</related>
    <related>HashTable</related>
    <related>put</related>

	
	
	<!-- multiple authors can be defined -->
	<author macro="author_herceg"/>

	<!-- finally, the text of the license -->
	<license macro="GPL2"/>
</help>

<?xml version="1.0" encoding="utf-8" ?>

<help>
	<function>removeByIndex</function>
	
	<!-- one-line description of the function -->
	<info>
		Remove element from the table based on the index.
	</info>
	
	<syntax>t = removeByIndex(h,index)</syntax>
	<syntax>t = h.removeByIndex(index)</syntax>

	<!-- long description of the function -->
	<descr>
        Remove element from the table stored under given <tt>index</tt>. If the index is 
        greater as the total number of elements, an error is thrown.
	</descr>
	<!-- now describe input arguments -->
	
	<!-- mark inputs as mandatory by providing the "required" attribute -->
	<input required="true">
		<name>h</name>
        <descr>HashTable object.</descr>
		<!-- any class name can be used, it can even be omitted -->
		<class name="HashTable"/>
	</input>

    <input required="true">
		<name>index</name>
        <descr>Index of the element to remove.</descr>
		<!-- any class name can be used, it can even be omitted -->
		<class name="double"/>
	</input>

	<!-- now describe output arguments -->
	<output>
		<name>t</name>
        <descr>Logical scalar that informs whether the element was removed (false) or not (true).</descr>
		<class name="logical"/>
	</output>

	<!-- we can provide multiple code examples -->
    <example>
            <!-- each example is a combination of descriptions and commands -->
        <descr>Construct empty table</descr>		
        <cmd>h = HashTable</cmd>
        <descr>Put 10 elements inside the table.</descr> 
        <cmd>for i=1:10, h.put(i,struct('data',[i,11-i,3+i])); end </cmd>		
        <descr> Remove the second element </descr>
        <cmd> h.removeByIndex(2) </cmd>
	</example>

	<!-- multiple related function can be defined -->
	<related>HashTable</related>
    <related>put</related>
    <related>removeByKey</related>
    <related>replaceByIndex</related>
    <related>replaceByKey</related>
	
	
	<!-- multiple authors can be defined -->
	<author macro="author_herceg"/>

	<!-- finally, the text of the license -->
	<license macro="GPL2"/>
</help>
